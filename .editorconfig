[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.ts]
indent_style = space
indent_size = 4
quote_type = single

[*.html]
indent_style = space
indent_size = 2

[*.blade.php]
indent_style = space
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
